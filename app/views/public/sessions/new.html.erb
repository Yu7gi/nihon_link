<div class="container d-flex align-items-center justify-content-center">
  <div class="form-box">
    <div class="row d-flex justify-content-center ml-3 mt-5">
      <h2 class="text-user">Log in</h2>
    </div>

    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="form-group mt-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="row d-flex justify-content-center mt-5">
        <button type="submit" class="btn btn-user">Log in</button>
      </div>
    <% end %>

    <div class="row mx-5 mt-5 mb-3">
      <h4 class="text-user">New to Nihon Link?</h4>
    </div>
    <div class="text-center">
      <h5><%= link_to "Sign up now.", new_user_registration_path, class: "link-user" %></h5>
    </div>
  </div>
</div>
