<div class="container d-flex align-items-center justify-content-center">
  <div class="row">
    <div class="col">

     <div class="row mt-5 d-flex justify-content-center">
        <h2 class="text-user">My page</h2>
      </div>

      <div class="mt-3 d-flex justify-content-center">
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "250x250" %>
        <% else %>
          <%= image_tag 'icon_user_5', size: "250x250" %>
        <% end %>
      </div>

      <table class="table my-table mt-4">
        <tbody>
          <tr>
            <th>Name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
          <tr>
            <th>Native<br>language</th>
            <td><%= current_user.native %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= current_user.email %></td>
          </tr>
        </tbody>
      </table>

      <div class="row d-flex justify-content-center mt-5">
        <%= link_to 'Edit', edit_user_path(@user.id), class: 'btn btn-success btn-edit' %>
      </div>
    </div>
  </div>
</div>