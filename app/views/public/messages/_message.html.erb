<div class="row d-flex justify-content-end">
  <div class="col-lg-4">
    <p id="message_<%= message.id %>" style="background-color: #fff1cf; padding: 5px; border-radius: 10px; "><%= message.message %></p>
  </div>
  <div class="col-lg-1">
    <%= link_to message_path(message), method: :delete, class: 'btn', "data-confirm" => "Are you sure you want to delete this messasge?", remote: true, id: "delete_message_#{message.id}" do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
</div>