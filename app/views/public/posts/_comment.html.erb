<% post.comments.each do |comment| %>
  <div id="comment_<%= comment.id %>">
    <div class="mt-4">
      <%= link_to user_path(comment.user.id) do %>
        <% if comment.user.profile_image.attached? %>
          <%= image_tag url_for(comment.user.profile_image), size: "50x50" %>
        <% else %>
          <%= image_tag 'icon_user_5.png', size: "60x60" %>
        <% end %>
        <%= comment.user.name %>
      <% end %>
    </div>
    <div class="ml-3 mt-2">
      <%= comment.comment %>
      <p class="text-black-50 d-flex justify-content-end align-self-end mb-0 small"><<%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>></p>
    </div>
    <div class="mt-3 ml-3">
      <% if comment.user == current_user %>
        <%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-danger", "data-confirm" => "Are you sure you want to delete this comment?", remote: true %>
      <% end %>
    </div>
  </div>
<% end %>