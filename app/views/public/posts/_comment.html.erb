<% post.comments.each do |comment| %>
  <div id="comment_<%= comment.id %>">
    <div class="mt-4">
      <%= link_to user_path(comment.user.id) do %>
        <% if comment.user.profile_image.attached? %>
          <%= image_tag url_for(comment.user.profile_image), size: "70x70" %>
        <% else %>
          <%= image_tag 'icon_user_5.png', size: "70x70" %>
        <% end %>
        <%= comment.user.name %>
      <% end %>
    </div>
    <div>
      <%= comment.comment %>
    </div>
    <div class="mt-3">
      <% if comment.user == current_user %>
        <%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-danger", "data-confirm" => "Are you sure you want to delete this comment?", remote: true %>
      <% end %>
    </div>
  </div>
<% end %>