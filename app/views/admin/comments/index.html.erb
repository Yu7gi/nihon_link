<div class="container">
  <div class="row mx-auto">
    <h2 class="text-user mb-4">コメント一覧</h2>

    <table class="table">
      <thead>
        <tr>
          <th>名前</th>
          <th class="col-md-7">コメント</th>
          <th class="col-1"></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= @users.find(comment.user_id).name %></td>
            <td><%= comment.comment %></td>
            <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to "削除", admin_comment_path(comment), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col mt-4">
      <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>