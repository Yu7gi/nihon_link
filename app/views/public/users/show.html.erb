<div class="container-fluid mt-5">
  <div class="row">

    <div class="col-md-5">
      <div class="d-flex justify-content-center mb-4">
        <% if @user.profile_image.attached? %>
          <%= image_tag url_for(@user.profile_image), size: "100x100" %>
        <% else %>
          <%= image_tag 'icon_user_5.png', size: "100x100" %>
        <% end %>
      </div>
      <table class="table d-flex justify-content-center">
        <tbody>
          <tr>
            <th>Name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>Language</th>
            <td><%= @user.native %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= simple_format(@user.introduction) %></td>
          </tr>
        </tbody>
      </table>
      <div class="d-flex justify-content-center mt-4">
        <% if !(current_user.guest? || @user.guest?) && @user.id != current_user.id %>
          <%= link_to "Send Message", message_path(@user.id), class: "btn btn-outline-danger my-btn" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-6 mt-5"> 
      <%= render "posts", model: @user %>
    </div>
  </div>
</div>
        