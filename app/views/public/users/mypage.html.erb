<div class="container">

  <div class="row">
    <div class="col-md-4">
      <div class="col-7">
        <h2 class="text-center text-user">My page</h2>
      </div>
      <div class="mt-3 d-flex justify-content-center">
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "200x200" %>
        <% else %>
          <%= image_tag 'icon_user_5', size: "200x200" %>
        <% end %>
      </div>

      <table class="table my-table mt-4">
        <tbody>
          <tr>
            <th>Name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
          <tr>
            <th>Native<br>language</th>
            <td><%= current_user.native %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= current_user.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="row d-flex justify-content-center mt-5">
        <%= link_to 'Edit', edit_user_path(@user.id), class: 'btn btn-success btn-custom' %>ã€€
        <% if user_signed_in? && @user == current_user %>
          <% unless @user.email == "guest@example.com" then %>
            <%= link_to "Delete Account", user_path(current_user.id), class: "btn btn-danger btn-custom", method: :delete, "data-confirm" => "Are you sure you want to delete your account?" %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-6 ml-5"> 
      <div class="col-4 mb-3">
        <h4 class="text-center">Your posts</h4>
      </div>
      <%= render "posts", model: @user %>
    </div>
  </div>
</div>