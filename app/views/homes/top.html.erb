<div class="top-container">
  <div class="bg-image" style="background-image: url('<%= asset_path('japan.jpg') %>'); background-size: cover; background-position: center; height: 500px; width: 100%; display: flex; justify-content: center; align-items: center;">
    <div class="row top-image">
      <%= image_tag 'top.png'  %>
    </div>
  </div>

  <div class="row mt-4 justify-content-center">
    <% unless admin_signed_in? %>
      <% if user_signed_in? %>
        <div class="col-md-9 col-lg-6">
          <div>
            <h2 class="text-user text-center mb-3">Recent Updates</h2>
          </div>
          <div class="table-responsive">
            <table class="table">
              <%= render 'public/posts/list', posts: @posts %>
            </table>
          </div>
          <div class="d-flex justify-content-end">
            <%= link_to "Check more >>", posts_path %>
          </div> 
        </div>
        <div class="col-md-3 col-lg-2">
          <h2 class="text-user text-center">Genres</h2>
          <%= render 'public/posts/genres', genres: @genres %>
        </div>
      <% else %>
        <div class="mx-auto mt-5">
          <%= link_to "Explore as a Guest!", users_guest_sign_in_path, method: :post, class: "btn-guest" %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>