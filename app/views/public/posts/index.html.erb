<div class="container-fluid">
  <div class="row">
    
    <div class="col-md-2 mt-5 ml-4">
      <div class="d-flex justify-content-center mb-4">
        <h4 class="text-user">Serch by genre</h4>
      </div>
      <%= render 'genres', genres: @genres %>
    </div>
    <div class="col-md-8 offset-md-1 mt-5 align-items-center">
      <div class="col-md-5 col-lg-4 col-xl-2">
        <h3 class="text-user">What's new?</h3>
      </div>
      <table class="table mt-3">
        <%= render 'list', posts: @posts %>
      </table>
      <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>