<% posts.each do |post| %>
  <tr>
    <td class="col-2">
      <%= link_to user_path(post.user.id) do %>
        <% if post.user.profile_image.attached? %>
          <%= image_tag url_for(post.user.profile_image), size: "70x70" %>
        <% else %>
          <%= image_tag 'icon_user_5.png', size: "70x70" %>
        <% end %>
        <br>
        <div class="text-dark"><%= post.user.name %></div>
      <% end %>
    </td>
    <td class="col-6 pt-5">
      <%= link_to post_path(post.id) do %>
        <strong><%= post.title %></strong></td>
      <% end %>
    </td>
    <td class="col-2 pt-5"><i class="fa-regular fa-flag"></i>ã€€<%= post.genre.name %></td>
  </tr>
<% end %>