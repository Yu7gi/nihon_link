<div class="container d-flex align-items-center justify-content-center">
  <div class="row">
    <div class="col">

      <div class="row mt-5 d-flex justify-content-center">
        <h2 class="text-user">Create new post</h2>
      </div>

      <div  class=" mt-4 d-flex align-items-center justify-content-center">
        <%= render "public/shared/error_messages", model: @post %>
      </div>

      <%= form_with model: @post do |f| %>
        <div class="form-group row mt-5">
          <div class="col-2 my-auto mr-4">
            <%= f.label :genre_id, 'Genre' %>
          </div>
          <div class="col-9 form-post">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {class: 'form-control'} %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <div class="col-2 mr-4 my-auto">
            <%= f.label :title %>
          </div>
          <div class="col-9">
            <%= f.text_field :title, class: "form-control form-post" %>
          </div>
        </div>
    
        <div class="form-group row mt-4">
          <div class="col-2 mr-4 my-auto">
            <%= f.label :body %>
          </div>
          <div class="col-9">
            <%= f.text_area :body, class: "form-control form-post form-b" %>
          </div>
        </div>
      
        <div class="row d-flex justify-content-center mt-5">
          <button type="submit" class="btn btn-primary btn-custom">Create post</button>
        </div>
      <% end %>
    </div>
  </div>
</div>