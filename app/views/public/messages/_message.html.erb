<div  id="message_<%= message.id %>" class="row d-flex justify-content-end mt-2">
  <div class="col-md-4 col-7">
    <div class="mt-1 message-style"style="background-color: #fff1cf; padding: 5px; border-radius: 10px; ">
      <%= simple_format(message.message, {}, wrapper_tag: "div") %>
      <p class="text-black-50 d-flex justify-content-end align-self-end mb-0 small"><<%= message.created_at.strftime('%Y/%m/%d %H:%M') %>></p>
    </div>
  </div>
  <div class="col-lg-1 d-flex justify-content-end">
    <%= link_to message_path(message), method: :delete, class: 'btn', "data-confirm" => "Are you sure you want to delete this messasge?", remote: true do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
</div>