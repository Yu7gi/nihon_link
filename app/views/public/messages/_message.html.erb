<div  id="message_<%= message.id %>" class="row d-flex justify-content-end">
  <div class="col-lg-4">
    <div class="mt-1 message-style"style="background-color: #fff1cf; padding: 5px; border-radius: 10px; ">
      <%= simple_format(message.message, {}, wrapper_tag: "div") %>
    </div>
  </div>
  <div class="col-lg-1">
    <%= link_to message_path(message), method: :delete, class: 'btn', "data-confirm" => "Are you sure you want to delete this messasge?", remote: true do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
</div>