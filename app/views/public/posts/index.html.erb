<div class="container-fluid">
  <div class="row">
    
    <div class="col-md-2 mt-5 ml-4">
      <div class="d-flex justify-content-center mb-4">
        <h4 class="text-user">Serch by genre</h4>
      </div>
      <%= render 'genres', genres: @genres %>
    </div>
    <div class="col-8 ml-5 mt-5 align-items-center">
      <div class="col-2">
        <h3 class="text-user">What's new?</h3>
      </div>
      <table class="table mt-3">
        <% @posts.each do |post| %>
          <tr>
            <td class="col-2">
              <%= link_to user_path(post.user.id) do %>
                <% if post.user.profile_image.attached? %>
                  <%= image_tag url_for(post.user.profile_image), size: "70x70" %>
                <% else %>
                  <%= image_tag 'icon_user_5.png', size: "70x70" %>
                <% end %>
                <br>
                <div class="text-dark"><%= post.user.name %></div>
              <% end %>
            </td>
            <td class="col-6 pt-5">
              <%= link_to post_path(post.id) do %>
                <strong><%= post.title %></strong></td>
              <% end %>
            <td class="col-2 pt-5"><%= post.genre.name %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>