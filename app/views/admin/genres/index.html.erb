<div class="container">
  <div class="row">
    <div class="col">
      
      <div class="row mt-5 d-flex justify-content-center">
        <h2 class="text-user">ジャンル一覧・追加</h2>
      </div>

      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="form-group row mt-3">
          <div class="col-lg-9  d-flex justify-content-end">
            <div class="col-lg-4">
              <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名を入力" %>
            </div>
            <%= f.submit "新規登録", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>

      <div class="mt-4 d-flex justify-content-center">
        <table class="table col-lg-6">
          <thead class="table-g">
            <tr>
              <th class="col-lg-7 text-white">ジャンル名</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><h4><strong><%= genre.name %></strong></h4></td>
                <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
                <td><%= link_to "削除", admin_genre_path(genre.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

      
